<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.jmoon.roborium.Register">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8FF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarindividualP"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="0.18"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Register details" />


            </LinearLayout>


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:paddingBottom="2sp"
                android:paddingTop="4sp">


                <LinearLayout
                    android:id="@+id/register_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/register_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="48.67"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="First Name" />

                            <EditText
                                android:id="@+id/firstnameR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPostalAddress" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="Last Name" />

                            <EditText
                                android:id="@+id/lastnameR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPostalAddress" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="48.67"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1.13"
                                android:gravity="center"
                                android:text="Email:" />

                            <EditText
                                android:id="@+id/emailR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textEmailAddress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="48.67"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.85"
                                android:gravity="center"
                                android:text="Password" />

                            <EditText
                                android:id="@+id/passwordR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPassword" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="48.67"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="Password Confirm" />

                            <EditText
                                android:id="@+id/passwordconfirmR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPassword" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="48.67"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.66"
                                android:gravity="center"
                                android:text="Telephone" />

                            <EditText
                                android:id="@+id/phoneR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPhonetic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.60"
                                android:gravity="center"
                                android:text="Company" />

                            <EditText
                                android:id="@+id/companyR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="--"
                                android:inputType="textPostalAddress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.53"
                                android:gravity="center"
                                android:text="Address1" />

                            <EditText
                                android:id="@+id/address1R"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPostalAddress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.55"
                                android:gravity="center"
                                android:text="Address2" />

                            <EditText
                                android:id="@+id/address2R"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPostalAddress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.63"
                                android:gravity="center"
                                android:text="City" />

                            <EditText
                                android:id="@+id/cityR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPostalAddress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="PostCode" />

                            <EditText
                                android:id="@+id/postcodeR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPostalAddress" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                          >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="Country" />

                            <Spinner
                                android:id="@+id/countryR"
                                android:layout_width="288dp"
                                android:layout_height="56dp"
                                android:layout_weight="0.23" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="48.67"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.59"
                                android:gravity="center"
                                android:text="State" />

                            <Spinner
                                android:id="@+id/stateR"
                                android:layout_width="288dp"
                                android:layout_height="51dp"
                                android:layout_weight="0.22" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/terms_and_conditionsR"
                            android:layout_width="303dp"
                            android:layout_height="64dp"

                            android:ems="10"
                            android:gravity="center"
                            android:text="Agree Terms and Conditions"
                            android:textColor="#000"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/checkbox_billR"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                             />
                    </LinearLayout>

                    <Button
                        android:id="@+id/register_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
