<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.jmoon.roborium.Home"
    >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:padding="10dip"
                    app:centered="true"
                    app:fillColor="#df0623"
                    app:pageColor="#fff"
                    app:snap="false" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/imageButton6"
                    android:layout_width="181dp"
                    android:layout_height="35dp"
                    android:textSize="15sp"
                    android:background="@drawable/round_border_home_button"
                    android:text="Featured"
                    android:textStyle="bold"
                    android:textColor="#FDF5E6"
                    android:fontFamily="sans-serif"/>

                <com.meetme.android.horizontallistview.HorizontalListView
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"

                    android:fadingEdgeLength="5dp"
                    android:padding="2dp"
                    android:requiresFadingEdge="horizontal"
                    widget:dividerWidth="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/imageButton1"
                    android:layout_width="181dp"
                    android:layout_height="35dp"
                    android:textSize="15sp"
                    android:background="@drawable/round_border_home_button"
                    android:text="Best Sellers "
                    android:textStyle="bold"
                    android:textColor="#FDF5E6"
                    android:fontFamily="sans-serif"/>

                <com.meetme.android.horizontallistview.HorizontalListView
                    android:id="@+id/gallery2"
                    android:layout_width="fill_parent"
                    android:layout_height="210dp"
                    android:fadingEdgeLength="5dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:requiresFadingEdge="horizontal"
                    widget:dividerWidth="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/imageButtonsale"
                    android:layout_width="181dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_border_home_button"
                    android:fontFamily="sans-serif"
                    android:text="Specials"
                    android:textColor="#FDF5E6"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.meetme.android.horizontallistview.HorizontalListView
                    android:id="@+id/gallery3"
                    android:layout_width="fill_parent"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:fadingEdgeLength="5dp"
                    android:padding="5dp"
                    android:requiresFadingEdge="horizontal"
                    widget:dividerWidth="5dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
