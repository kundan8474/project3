<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/thumb_compare"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="7.5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/app_logo_splash" />

        <TextView
            android:id="@+id/nameCompare"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/background"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <android.support.v4.widget.Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:padding="2dp"
                android:text="about" />

            <android.support.v4.widget.Space
                android:id="@+id/space3"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@color/background" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_weight=".5"
                android:background="@color/colorPrimaryDark"
                android:padding="2dp"
                android:text="add to wishlist" />
        </LinearLayout>

        <TextView
            android:id="@+id/priceCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/quantityCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <android.support.v4.widget.Space
            android:id="@+id/space4"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/ModelCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <android.support.v4.widget.Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/manufacturerCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <android.support.v4.widget.Space
            android:id="@+id/space5"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#000000" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ratingCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/ratingBasisCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/weightCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/lengthCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/widthCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/heightCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/DescCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:hint="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <android.support.v4.widget.Space
                    android:id="@+id/space6"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#000000" />

            </LinearLayout>
        </ScrollView>

        <ListView
            android:id="@+id/attributeListViewCompare"
            style="@style/Widget.AppCompat.ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/gray" />

    </LinearLayout>

</LinearLayout>