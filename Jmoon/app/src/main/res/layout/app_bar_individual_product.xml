<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#F8F8FF"
    tools:context="co.jmoon.roborium.IndividualProducts">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
    android:background="@color/gray" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8FF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarindividualP"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="0.2"
                    android:background="@color/colorPrimaryDark"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

                <LinearLayout
                    android:id="@+id/llButtonsSection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="#F8F8FF"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:weightSum="1"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/addToCompareList"
                            android:padding="7dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_style_black_24dp"
                            android:layout_weight="0.16"
                            android:background="@color/colorPrimaryDark"
                            android:text="Compare"
                            android:textColor="#ffffff" />

                        <ImageButton
                            android:id="@+id/addToWishList"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.16"
                            android:background="@color/transparent"

                            android:src="@drawable/heart" />

                        <ImageButton
                            android:id="@+id/addToCartButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.18"
                            android:background="@color/transparent"

                            android:src="@drawable/add2cart"
                             />
                    </LinearLayout>

                    <!-- <Button
                     android:id="@+id/addToCompare"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="0.33"
                     app:srcCompat="@android:drawable/ic_lock_idle_alarm" />-->

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_individual_product"/>

</LinearLayout>



